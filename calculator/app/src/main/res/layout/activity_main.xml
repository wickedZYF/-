<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="4"
        >

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:gravity="left"
            android:textSize="50dp" />


        <Button
            android:id="@+id/clear"
            android:text="C"
            android:textColor="#0080ff"
            android:textSize="50sp" />
        <Button
            android:id="@+id/chu"
            android:text="÷"
            android:textColor="#0080ff"
            android:textSize="50sp" />

        <Button
            android:id="@+id/cheng"
            android:text="×"
            android:textColor="#0080ff"
            android:textSize="50sp" />
        <Button
            android:id="@+id/huitui"
            android:text="←"
            android:textColor="#0080ff"
            android:textSize="50sp" />
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="50sp" />

        <Button
            android:id="@+id/jia"
            android:text="+"
            android:textColor="#0080ff"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="50sp" />

        <Button
            android:id="@+id/jian"
            android:text="-"
            android:textColor="#0080ff"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="50sp" />


        <Button
            android:id="@+id/sum"
            android:layout_height="168dp"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:text="="
            android:textColor="#0080FF"
            android:textSize="50sp" />


        <Button
            android:id="@+id/baifen"
            android:text="%"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:textSize="50sp" />

        <Button
            android:id="@+id/dian"
            android:text="."
            android:textSize="50sp" />




    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>